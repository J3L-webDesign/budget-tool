        <form class="modal" id="expense-form">
            <h3>Add Expense <span class="u-float-right x-btn" id="close-expenses">X</span></h3>
            <input class="u-full-width" type="text" id="expense-name" placeholder="Name" required/>
            <select  class="u-full-width" id="expense-category" required>
                <option disabled selected value=''>Category</option>
                <option value="bill">Bills</option>
                <option value="debt">Debt</option>
                <option value="groceries">Groceries</option>
                <option value="prepared food">Prepared Food</option>
                <option value="entertainment">Entertainment</option>
                <option value="subscriptions">Subscriptions</option>
                <option value="misc">Miscellaneous</option>
            </select>
            <input class="u-full-width" type="number" id="expense-amount" placeholder="Amount" required/>
            <input class="modal__date-input u-full-width" type="date" id="expense-date" placeholder="Date" required/>
            <input class="u-full-width" type="submit" value="submit"/>
        </form>
        
        <form class="modal" id="expense-edit-form">
            <h3>Edit Expense <span class="u-float-right x-btn" id="close-edit-expenses">X</span></h3>
            <input class="u-full-width" type="text" id="expense-edit-name" placeholder="Name" required/>
            <select  class="u-full-width" id="expense-edit-category" required>
                <option disabled selected value=''>Category</option>
                <option value="bill">Bills</option>
                <option value="debt">Debt</option>
                <option value="groceries">Groceries</option>
                <option value="prepared food">Prepared Food</option>
                <option value="entertainment">Entertainment</option>
                <option value="subscriptions">Subscriptions</option>
                <option value="misc">Miscellaneous</option>
            </select>
            <input class="u-full-width" type="number" id="expense-edit-amount" placeholder="Amount" required/>
            <input class="modal__date-input u-full-width" type="date" id="expense-edit-date" placeholder="Date" required/>
            <input class="u-full-width" type="submit" value="update"/>
        </form>
        
        <form class="modal" id="save-data-form">
            <h3>Save Data As <span class="u-float-right x-btn" id="close-save-data">X</span></h3>
            <input class="u-full-width" type="text" id="save-month" placeholder="Month"/>
            <input class="u-full-width" type="text" id="save-year" placeholder="Year"/>
            <input class="u-full-width" type="submit" value="save"/>
        </form>

        <form class="modal" id="download-pdf" action="/pdf/download" method="GET">

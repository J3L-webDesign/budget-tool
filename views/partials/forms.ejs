<form class="modal" id="income-form">
            <h3>Add Income <span class="u-float-right x-btn" id="close-income">X</span></h3>
            <input class="u-full-width" type="text" id="income-source" placeholder="Source" required/>
            <input class="u-full-width" type="number" id="income-amount" placeholder="Amount" required/>
            <input class="modal__date-input u-full-width" type="date" id="income-date" placeholder="Date" required/>
            <input class="u-full-width" type="submit" value="submit"/>
        </form>
        
        <form class="modal" id="income-edit-form">
            <h3>Edit Income <span class="u-float-right x-btn" id="close-edit-income">X</span></h3>
